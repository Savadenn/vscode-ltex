{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Watch extension",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"webpack-dev"
			],
			"presentation": {
				"reveal": "silent"
			},
			"isBackground": true,
			"problemMatcher": "$tsc-watch"
		},
		{
			"label": "Build extension",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"webpack"
			],
			"presentation": {
				"reveal": "silent"
			},
			"isBackground": false,
			"problemMatcher": "$tsc-watch",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
